		"outDir": "dist",
		"allowJs": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"~/*": ["app/*"]
		}
	},
	"include": ["src/**/*.ts", "index.d.ts"],
	"exclude": ["node_modules", ".vscode"]
}
